<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainHistory"
    android:onClick="historyListener"
    android:padding="8dp"
    android:background="@drawable/cards_bg"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/logo"
            android:layout_width="64dp"
            android:layout_height="64dp" />
        <RelativeLayout
            android:id="@+id/containerH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="4dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/statusServis"
                android:text="Sedang Dikerjakan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="4dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/tanggalServis"
                android:text="12-02-2016"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="24dp"
                android:layout_marginBottom="4dp"
                style="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:textStyle="bold"
                android:id="@+id/jenisServis"
                android:text="Servis Setan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginBottom="4dp"
                android:id="@+id/lokasiServis"
                android:layout_below="@id/jenisServis"
                android:text="Lokasi : Jln Kusuma Bangsa, Surabaya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>